<script>
  // Extender el tipo del objeto window
  declare global {
    interface Window {
      toggleDetails: (header: HTMLElement) => void;
    }
  }

  // Definir la función toggleDetails en el ámbito global
  window.toggleDetails = function (header: HTMLElement) {
    const details = header.nextElementSibling as HTMLElement; // Obtiene el siguiente elemento hermano
    if (details.style.display === 'block') {
      details.style.display = 'none'; // Oculta los detalles
      header.querySelector('.arrow')!.textContent = '▼'; // Cambia la flecha
    } else {
      details.style.display = 'block'; // Muestra los detalles
      header.querySelector('.arrow')!.textContent = '▲'; // Cambia la flecha
    }
  };
</script>

