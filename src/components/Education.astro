</section>

<script>
  // Función para expandir/colapsar detalles
  function toggleDetails(header: { closest: (arg0: string) => any; querySelector: (arg0: string) => any; }) {
    const card = header.closest('.education-card');
    const details = card.querySelector('.card-details');
    const arrow = header.querySelector('.arrow');

    if (details.style.display === 'block') {
      details.style.display = 'none';
      arrow.textContent = '▼';
    } else {
      details.style.display = 'block';
      arrow.textContent = '▲';
    }
  }

  // Inicializar Scroll Reveal
  document.addEventListener('DOMContentLoaded', () => {
    ScrollReveal().reveal('.animate-on-scroll', {
      duration: 1000,
      distance: '10px',
      easing: 'ease-out',
      origin: 'bottom',
      interval: 200,
    });
  });
</script>

<style>
/* Estilos generales */
.section.dark-mode {
  background-color: #2C3E50;
  color: #ffffff;
  padding: 2rem 0;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 1rem;
}

.education-group {
  margin-bottom: 3rem;
}

.group-title {
  font-size: 1.8rem;
  font-weight: bold;
  margin-bottom: 1.5rem;
  color: #ECF0F1; /* Color de acento */
}

.education-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.education-card {
  background: #1e1e1e;
  border-radius: 10px;
  padding: 1.5rem;
  box-shadow: 0 4px 6px rgba(250, 250, 250, 0.2);
  transition: transform 0.3s ease;
}

.education-card:hover {
  transform: scale(1.03);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  margin-bottom: 0.5rem;
}

.card-header h4 {
  margin: 0;
  font-size: 1.0rem;
  color: #ffffff;
}

.card-header .arrow {
  font-size: 1.2rem;
  color: #ECF0F1;
  transition: transform 0.3s ease;
}

.card-details {
  display: none; /* Oculto por defecto */
  margin-top: 1rem;
  font-size: 1rem;
  color: #d4d4d4;
}

.card-details p {
  margin: 0.5rem 0;
}
</style>